doctype html
html
  head
    meta(charset="utf-8" )
    title #{title}
    link(rel='stylesheet', href='./styles/a_cloze_b_given.css')
  body
  .container  
    .content
      - if(!lists)
        .alert There's not questions designed yet!
      - else
        - each item in lists
          .part
            .data #{item}
            .num(table_id= '#{item._id}') #{item.question}
            .text 
              .plain #{item.top}
              img.horn(src="../imgs/icon_sound.png" )
              .inputTip.fadeout
                .uparrow
                .popoverContent <span>WARNING: </span>You haven't typed your answer yet !
            .text 
              .plain #{item.bottom}
        .myprogress
          -each item in lists
            .learn0    
      #next Answer
  
  script(type="application/javascript", src="scripts/jquery-2.1.4.min.js")
  //- script(type="application/javascript", src="scripts/plugin/soundmanager2-jsmin.js")
  script(type="application/javascript", src="scripts/a_cloze_b_given.js")