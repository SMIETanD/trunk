extend head

block content

  link(rel='stylesheet', href='./styles/login.css')
  div.content
    .login
      div.top
        div Log In
      div.form
        input(type="text" class="form-control" required="required" name='username' placeholder='User name')
        br
        input(type="password" class="form-control" required="required" name="password" placeholder="Password")
        br
        div.forget 
          a(href='forget') Forgot Username or Password?
        div.register
          a(href='register') Register
        .btn.btn-primary Login In
        .message 输入不可为空
  script(type='text/javascript'). 
    window.onload = function(){
      document.querySelector('.content').style.minHeight = window.innerHeight - 175 + 'px';
    }
  script(type="application/javascript", src="scripts/jquery-2.1.4.min.js")
  //- script(type="application/javascript", src="scripts/plugin/soundmanager2-jsmin.js")
  script(type="application/javascript", src="scripts/login.js")